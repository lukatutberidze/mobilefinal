<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke android:width="4dp" android:color="#773FF4" /> <!-- darker outline -->
            <corners android:radius="25dp" />
        </shape>
    </item>

    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke android:width="2dp" android:color="#C29EF2" />
            <corners android:radius="25dp" />
        </shape>
    </item>


    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">

            <gradient
                android:startColor="#8258F3"
                android:endColor="#5D31D9"
                android:angle="270"/>
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>
